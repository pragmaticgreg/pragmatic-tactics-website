{
  "designSystem": {
    "name": "Organic Flow Timeline System",
    "version": "2.0.0",
    "description": "A comprehensive design system extracted from organic timeline infographic featuring flowing connectors, vibrant color progression, and clean card-based layouts",
    
    "colors": {
      "primary": {
        "background": "#ffffff",
        "backgroundSecondary": "#f8fafc",
        "backgroundTertiary": "#f1f5f9",
        "surface": "#ffffff",
        "surfaceElevated": "#ffffff"
      },
      
      "flowProgression": {
        "step1": {
          "primary": "#0891b2",
          "secondary": "#06b6d4",
          "light": "#a5f3fc",
          "dark": "#164e63"
        },
        "step2": {
          "primary": "#059669",
          "secondary": "#10b981",
          "light": "#a7f3d0",
          "dark": "#064e3b"
        },
        "step3": {
          "primary": "#ca8a04",
          "secondary": "#eab308",
          "light": "#fef08a",
          "dark": "#713f12"
        },
        "step4": {
          "primary": "#ea580c",
          "secondary": "#f97316",
          "light": "#fed7aa",
          "dark": "#9a3412"
        },
        "step5": {
          "primary": "#dc2626",
          "secondary": "#ef4444",
          "light": "#fecaca",
          "dark": "#7f1d1d"
        },
        "step6": {
          "primary": "#7c2d92",
          "secondary": "#a855f7",
          "light": "#ddd6fe",
          "dark": "#581c87"
        }
      },
      
      "neutral": {
        "50": "#f8fafc",
        "100": "#f1f5f9",
        "200": "#e2e8f0",
        "300": "#cbd5e1",
        "400": "#94a3b8",
        "500": "#64748b",
        "600": "#475569",
        "700": "#334155",
        "800": "#1e293b",
        "900": "#0f172a"
      },
      
      "text": {
        "primary": "#1e293b",
        "secondary": "#475569",
        "tertiary": "#64748b",
        "muted": "#94a3b8",
        "inverse": "#ffffff"
      },
      
      "border": {
        "light": "#e2e8f0",
        "medium": "#cbd5e1",
        "dark": "#94a3b8"
      },
      
      "shadow": {
        "color": "rgba(15, 23, 42, 0.08)",
        "colorMedium": "rgba(15, 23, 42, 0.12)",
        "colorStrong": "rgba(15, 23, 42, 0.16)"
      }
    },

    "typography": {
      "fontFamilies": {
        "primary": "system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif",
        "secondary": "'Inter', system-ui, sans-serif",
        "mono": "'SF Mono', 'Monaco', 'Inconsolata', monospace"
      },
      
      "fontSizes": {
        "xs": "0.75rem",
        "sm": "0.875rem",
        "base": "1rem",
        "lg": "1.125rem",
        "xl": "1.25rem",
        "2xl": "1.5rem",
        "3xl": "1.875rem",
        "4xl": "2.25rem",
        "5xl": "3rem"
      },
      
      "fontWeights": {
        "light": "300",
        "normal": "400",
        "medium": "500",
        "semibold": "600",
        "bold": "700",
        "extrabold": "800"
      },
      
      "lineHeights": {
        "tight": "1.25",
        "snug": "1.375",
        "normal": "1.5",
        "relaxed": "1.625",
        "loose": "2"
      },
      
      "letterSpacing": {
        "tighter": "-0.05em",
        "tight": "-0.025em",
        "normal": "0",
        "wide": "0.025em",
        "wider": "0.05em",
        "widest": "0.1em"
      }
    },

    "spacing": {
      "0": "0",
      "1": "0.25rem",
      "2": "0.5rem",
      "3": "0.75rem",
      "4": "1rem",
      "5": "1.25rem",
      "6": "1.5rem",
      "8": "2rem",
      "10": "2.5rem",
      "12": "3rem",
      "16": "4rem",
      "20": "5rem",
      "24": "6rem",
      "32": "8rem",
      "40": "10rem",
      "48": "12rem",
      "56": "14rem",
      "64": "16rem"
    },

    "borderRadius": {
      "none": "0",
      "sm": "0.125rem",
      "base": "0.25rem",
      "md": "0.375rem",
      "lg": "0.5rem",
      "xl": "0.75rem",
      "2xl": "1rem",
      "3xl": "1.5rem",
      "full": "9999px",
      "circle": "50%"
    },

    "shadows": {
      "xs": "0 1px 2px 0 rgba(15, 23, 42, 0.05)",
      "sm": "0 1px 3px 0 rgba(15, 23, 42, 0.1), 0 1px 2px -1px rgba(15, 23, 42, 0.1)",
      "base": "0 4px 6px -1px rgba(15, 23, 42, 0.1), 0 2px 4px -2px rgba(15, 23, 42, 0.1)",
      "md": "0 10px 15px -3px rgba(15, 23, 42, 0.1), 0 4px 6px -4px rgba(15, 23, 42, 0.1)",
      "lg": "0 20px 25px -5px rgba(15, 23, 42, 0.1), 0 8px 10px -6px rgba(15, 23, 42, 0.1)",
      "xl": "0 25px 50px -12px rgba(15, 23, 42, 0.25)",
      "inner": "inset 0 2px 4px 0 rgba(15, 23, 42, 0.05)"
    },

    "components": {
      "timelineNode": {
        "container": {
          "width": "80px",
          "height": "80px",
          "borderRadius": "circle",
          "backgroundColor": "colors.primary.surface",
          "border": "3px solid currentColor",
          "shadow": "shadows.md",
          "display": "flex",
          "alignItems": "center",
          "justifyContent": "center",
          "position": "relative",
          "zIndex": "2"
        },
        "icon": {
          "fontSize": "fontSizes.2xl",
          "color": "currentColor"
        },
        "states": {
          "active": {
            "transform": "scale(1.05)",
            "shadow": "shadows.lg"
          }
        }
      },
      
      "contentCard": {
        "container": {
          "backgroundColor": "colors.primary.surface",
          "borderRadius": "borderRadius.xl",
          "padding": "spacing.6",
          "shadow": "shadows.base",
          "border": "1px solid colors.border.light",
          "maxWidth": "320px",
          "position": "relative"
        },
        "title": {
          "fontSize": "fontSizes.lg",
          "fontWeight": "fontWeights.semibold",
          "color": "colors.text.primary",
          "marginBottom": "spacing.2"
        },
        "content": {
          "fontSize": "fontSizes.sm",
          "color": "colors.text.secondary",
          "lineHeight": "lineHeights.relaxed"
        },
        "states": {
          "hover": {
            "transform": "translateY(-2px)",
            "shadow": "shadows.lg"
          }
        }
      },
      
      "organicConnector": {
        "path": {
          "stroke": "currentColor",
          "strokeWidth": "4px",
          "fill": "none",
          "strokeLinecap": "round",
          "strokeLinejoin": "round",
          "opacity": "0.8"
        },
        "gradient": {
          "type": "linear",
          "direction": "vertical",
          "stops": [
            { "offset": "0%", "color": "colors.flowProgression.step1.primary" },
            { "offset": "20%", "color": "colors.flowProgression.step2.primary" },
            { "offset": "40%", "color": "colors.flowProgression.step3.primary" },
            { "offset": "60%", "color": "colors.flowProgression.step4.primary" },
            { "offset": "80%", "color": "colors.flowProgression.step5.primary" },
            { "offset": "100%", "color": "colors.flowProgression.step6.primary" }
          ]
        }
      },
      
      "timelineContainer": {
        "layout": {
          "display": "flex",
          "flexDirection": "column",
          "alignItems": "center",
          "gap": "spacing.16",
          "padding": "spacing.12",
          "position": "relative"
        },
        "alternatingLayout": {
          "step": {
            "display": "flex",
            "alignItems": "center",
            "gap": "spacing.8",
            "width": "100%",
            "maxWidth": "800px"
          },
          "stepLeft": {
            "flexDirection": "row",
            "justifyContent": "flex-end"
          },
          "stepRight": {
            "flexDirection": "row-reverse",
            "justifyContent": "flex-end"
          }
        }
      }
    },

    "layout": {
      "containers": {
        "narrow": "640px",
        "medium": "768px",
        "wide": "1024px",
        "extraWide": "1280px",
        "full": "100%"
      },
      
      "breakpoints": {
        "xs": "475px",
        "sm": "640px",
        "md": "768px",
        "lg": "1024px",
        "xl": "1280px",
        "2xl": "1536px"
      },
      
      "grid": {
        "columns": "12",
        "gap": "spacing.6",
        "gapLarge": "spacing.8"
      }
    },

    "animations": {
      "durations": {
        "fast": "150ms",
        "normal": "300ms",
        "slow": "500ms",
        "slower": "750ms"
      },
      
      "easings": {
        "easeInOut": "cubic-bezier(0.4, 0, 0.2, 1)",
        "easeOut": "cubic-bezier(0, 0, 0.2, 1)",
        "easeIn": "cubic-bezier(0.4, 0, 1, 1)",
        "bounce": "cubic-bezier(0.68, -0.55, 0.265, 1.55)"
      },
      
      "presets": {
        "fadeIn": {
          "opacity": "0 to 1",
          "duration": "durations.normal",
          "easing": "easings.easeOut"
        },
        "slideUp": {
          "transform": "translateY(20px) to translateY(0)",
          "opacity": "0 to 1",
          "duration": "durations.normal",
          "easing": "easings.easeOut"
        },
        "scaleIn": {
          "transform": "scale(0.95) to scale(1)",
          "opacity": "0 to 1",
          "duration": "durations.fast",
          "easing": "easings.bounce"
        },
        "pathDraw": {
          "strokeDasharray": "0 1000 to 1000 0",
          "duration": "durations.slower",
          "easing": "easings.easeInOut"
        }
      }
    },

    "patterns": {
      "flowTimeline": {
        "description": "Vertical timeline with organic flowing connectors and alternating content cards",
        "structure": [
          "timelineContainer",
          "organicConnector (background SVG path)",
          "timelineNode + contentCard pairs"
        ],
        "colorProgression": "flowProgression.step1 through step6",
        "spacing": "16 units between nodes",
        "alignment": "alternating left/right for content cards"
      },
      
      "connectedCards": {
        "description": "Cards connected by flowing organic paths with consistent spacing and visual rhythm",
        "cardSpacing": "spacing.8 horizontal gap from timeline node",
        "verticalRhythm": "spacing.16 between timeline steps",
        "visualDepth": "shadows.base for cards, shadows.md for nodes"
      },
      
      "colorFlow": {
        "description": "Progressive color system that flows through timeline steps",
        "application": "Apply step colors to timeline nodes, connectors, and accent elements",
        "accessibility": "Maintain sufficient contrast ratios with text.primary",
        "progression": "Smooth transition from cool to warm to cool tones"
      }
    },

    "accessibility": {
      "contrastRatios": {
        "minimum": "4.5:1",
        "enhanced": "7:1"
      },
      
      "focusIndicators": {
        "outline": "2px solid colors.flowProgression.step1.primary",
        "outlineOffset": "2px",
        "borderRadius": "borderRadius.base"
      },
      
      "motionPreferences": {
        "respectReducedMotion": true,
        "fallbacks": {
          "noAnimation": "Remove all transitions and animations",
          "staticConnectors": "Show static connector lines instead of animated paths"
        }
      }
    },

    "usage": {
      "primaryUseCase": "Timeline infographics, process flows, step-by-step guides",
      "secondaryUseCases": [
        "Progress indicators",
        "Journey maps",
        "Workflow visualizations",
        "Feature showcases"
      ],
      
      "implementation": {
        "framework": "Framework agnostic - use CSS custom properties",
        "svg": "Use SVG for organic connector paths with gradient definitions",
        "responsive": "Stack vertically on mobile, maintain flow on desktop",
        "performance": "Optimize SVG paths, use CSS transforms for animations"
      }
    }
  }
} 