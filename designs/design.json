{
  "name": "Business Consulting Design System",
  "version": "1.0.0",
  "description": "Comprehensive design system extracted from business consulting website interface",
  
  "colors": {
    "primary": {
      "navy": "#1E2A3A",
      "darkBlue": "#2C3E50",
      "blue": "#3498DB"
    },
    "secondary": {
      "lightBlue": "#1B9BDB",
      "teal": "#16A085",
      "accent": "#2980B9"
    },
    "neutral": {
      "white": "#FFFFFF",
      "lightGray": "#F8F9FA",
      "mediumGray": "#E9ECEF",
      "darkGray": "#495057",
      "charcoal": "#212529"
    },
    "semantic": {
      "success": "#28A745",
      "warning": "#FFC107",
      "error": "#DC3545",
      "info": "#17A2B8"
    }
  },

  "typography": {
    "fontFamily": {
      "primary": "system-ui, -apple-system, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif",
      "fallback": "Arial, sans-serif"
    },
    "fontSizes": {
      "xs": "12px",
      "sm": "14px",
      "base": "16px",
      "lg": "18px",
      "xl": "20px",
      "2xl": "24px",
      "3xl": "30px",
      "4xl": "36px",
      "5xl": "48px",
      "6xl": "60px"
    },
    "fontWeights": {
      "light": 300,
      "normal": 400,
      "medium": 500,
      "semibold": 600,
      "bold": 700,
      "extrabold": 800
    },
    "lineHeights": {
      "tight": 1.25,
      "snug": 1.375,
      "normal": 1.5,
      "relaxed": 1.625,
      "loose": 2
    },
    "letterSpacing": {
      "tighter": "-0.05em",
      "tight": "-0.025em",
      "normal": "0em",
      "wide": "0.025em",
      "wider": "0.05em",
      "widest": "0.1em"
    }
  },

  "spacing": {
    "scale": {
      "xs": "4px",
      "sm": "8px",
      "md": "16px",
      "lg": "24px",
      "xl": "32px",
      "2xl": "48px",
      "3xl": "64px",
      "4xl": "80px",
      "5xl": "96px",
      "6xl": "128px"
    },
    "component": {
      "cardPadding": "32px",
      "sectionPadding": "80px 0",
      "containerPadding": "0 20px",
      "buttonPadding": "12px 24px",
      "inputPadding": "16px"
    }
  },

  "layout": {
    "breakpoints": {
      "sm": "640px",
      "md": "768px",
      "lg": "1024px",
      "xl": "1280px",
      "2xl": "1536px"
    },
    "container": {
      "maxWidth": "1200px",
      "padding": "0 20px",
      "margin": "0 auto"
    },
    "grid": {
      "columns": {
        "1": "repeat(1, minmax(0, 1fr))",
        "2": "repeat(2, minmax(0, 1fr))",
        "3": "repeat(3, minmax(0, 1fr))",
        "4": "repeat(4, minmax(0, 1fr))"
      },
      "gap": {
        "sm": "16px",
        "md": "24px",
        "lg": "32px",
        "xl": "48px"
      }
    }
  },

  "borderRadius": {
    "none": "0px",
    "sm": "4px",
    "md": "8px",
    "lg": "12px",
    "xl": "16px",
    "2xl": "24px",
    "full": "9999px"
  },

  "shadows": {
    "sm": "0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06)",
    "md": "0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06)",
    "lg": "0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05)",
    "xl": "0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04)",
    "card": "0 4px 12px rgba(0, 0, 0, 0.08)"
  },

  "components": {
    "button": {
      "primary": {
        "backgroundColor": "#1B9BDB",
        "color": "#FFFFFF",
        "padding": "12px 24px",
        "borderRadius": "6px",
        "fontSize": "16px",
        "fontWeight": 600,
        "border": "none",
        "cursor": "pointer",
        "transition": "all 0.2s ease-in-out",
        "hover": {
          "backgroundColor": "#1687C5",
          "transform": "translateY(-2px)",
          "boxShadow": "0 4px 12px rgba(27, 155, 219, 0.3)"
        }
      },
      "secondary": {
        "backgroundColor": "transparent",
        "color": "#1B9BDB",
        "border": "2px solid #1B9BDB",
        "padding": "10px 22px",
        "borderRadius": "6px",
        "fontSize": "16px",
        "fontWeight": 600,
        "cursor": "pointer",
        "transition": "all 0.2s ease-in-out",
        "hover": {
          "backgroundColor": "#1B9BDB",
          "color": "#FFFFFF"
        }
      }
    },

    "card": {
      "default": {
        "backgroundColor": "#FFFFFF",
        "borderRadius": "8px",
        "padding": "32px",
        "boxShadow": "0 4px 12px rgba(0, 0, 0, 0.08)",
        "border": "1px solid #E9ECEF",
        "transition": "all 0.2s ease-in-out",
        "hover": {
          "transform": "translateY(-4px)",
          "boxShadow": "0 8px 24px rgba(0, 0, 0, 0.12)"
        }
      },
      "service": {
        "backgroundColor": "#FFFFFF",
        "borderRadius": "8px",
        "padding": "32px 24px",
        "textAlign": "center",
        "boxShadow": "0 4px 12px rgba(0, 0, 0, 0.08)",
        "minHeight": "280px"
      }
    },

    "section": {
      "hero": {
        "backgroundColor": "#1E2A3A",
        "color": "#FFFFFF",
        "padding": "120px 0",
        "textAlign": "center",
        "backgroundImage": "linear-gradient(135deg, #1E2A3A 0%, #2C3E50 100%)"
      },
      "default": {
        "padding": "80px 0",
        "backgroundColor": "#FFFFFF"
      },
      "alternate": {
        "padding": "80px 0",
        "backgroundColor": "#F8F9FA"
      },
      "dark": {
        "padding": "80px 0",
        "backgroundColor": "#1E2A3A",
        "color": "#FFFFFF"
      }
    },

    "testimonial": {
      "card": {
        "backgroundColor": "#FFFFFF",
        "borderRadius": "8px",
        "padding": "32px",
        "boxShadow": "0 4px 12px rgba(0, 0, 0, 0.08)",
        "position": "relative",
        "marginTop": "24px"
      },
      "quote": {
        "fontSize": "48px",
        "color": "#1B9BDB",
        "lineHeight": 1,
        "fontWeight": 700,
        "position": "absolute",
        "top": "-12px",
        "left": "16px"
      }
    },

    "navigation": {
      "header": {
        "backgroundColor": "#FFFFFF",
        "padding": "16px 0",
        "borderBottom": "1px solid #E9ECEF",
        "position": "sticky",
        "top": 0,
        "zIndex": 1000
      },
      "link": {
        "color": "#495057",
        "fontSize": "16px",
        "fontWeight": 500,
        "textDecoration": "none",
        "padding": "8px 16px",
        "transition": "color 0.2s ease-in-out",
        "hover": {
          "color": "#1B9BDB"
        }
      }
    }
  },

  "patterns": {
    "imageWithContent": {
      "layout": "grid",
      "gridTemplateColumns": "1fr 1fr",
      "gap": "48px",
      "alignItems": "center",
      "responsive": {
        "mobile": {
          "gridTemplateColumns": "1fr",
          "gap": "32px"
        }
      }
    },
    "serviceGrid": {
      "layout": "grid",
      "gridTemplateColumns": "repeat(3, 1fr)",
      "gap": "32px",
      "responsive": {
        "tablet": {
          "gridTemplateColumns": "repeat(2, 1fr)"
        },
        "mobile": {
          "gridTemplateColumns": "1fr",
          "gap": "24px"
        }
      }
    },
    "testimonialGrid": {
      "layout": "grid",
      "gridTemplateColumns": "repeat(3, 1fr)",
      "gap": "24px",
      "responsive": {
        "tablet": {
          "gridTemplateColumns": "repeat(2, 1fr)"
        },
        "mobile": {
          "gridTemplateColumns": "1fr"
        }
      }
    }
  },

  "animations": {
    "transitions": {
      "fast": "0.15s ease-in-out",
      "base": "0.2s ease-in-out",
      "slow": "0.3s ease-in-out"
    },
    "hover": {
      "lift": "translateY(-2px)",
      "liftCard": "translateY(-4px)",
      "scale": "scale(1.02)"
    }
  },

  "accessibility": {
    "focusRing": {
      "outline": "2px solid #1B9BDB",
      "outlineOffset": "2px"
    },
    "contrast": {
      "minimum": "4.5:1",
      "enhanced": "7:1"
    }
  }
} 